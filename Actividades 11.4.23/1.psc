Algoritmo PRACTICA_SEGUN
	Definir num Como Caracter
	Escribir "Ingrese un número entre 1 y 3"
	Leer num
	
	Segun num Hacer
		"1":
			Escribir "Ingreso el numero 1"
		"2":
			Escribir "Ingreso el numero 2"
		"3":
			Escribir "Ingreso el numero 3"
		De Otro Modo:
			Escribir "No ingreso ningun numero que le pedimos"
	FinSegun
	

FinAlgoritmo
