Algoritmo sin_titulo
	Definir dia Como Caracter
	Escribir "De un numero del 1 al 7"
	Leer dia
	Segun dia Hacer
		"1":
			Escribir "Lunes"
		"2":
			Escribir "Martes"
		"3":
			Escribir "Miercoles"
		"4":
			Escribir "Jueves"
		"5":
			Escribir "Viernes"
		"6":
			Escribir "Sabado"
		"7":
			Escribir "Domingo"
		De Otro Modo:
			Escribir "No ingreso un numero entre el 1 y el 7"
			
	FinSegun
FinAlgoritmo
